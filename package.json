{
  "name": "epoxy-calculator",
  "private": true,
  "version": "1.4.19",
  "main": "electron/main.js",
  "description": "Epoxy Resin Calculator",
  "author": "Epoxy Calc User",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "preview": "vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-updater": "6.6.2",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feattergruppen/Epoxy-Calculator.git"
  },
  "build": {
    "appId": "com.epoxy.calculator",
    "productName": "Epoxy Calculator",
    "publish": {
      "provider": "github",
      "owner": "feattergruppen",
      "repo": "Epoxy-Calculator"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis",
      "icon": "public/ikon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/ikon.ico",
      "uninstallerIcon": "public/ikon.ico"
    }
  }
}